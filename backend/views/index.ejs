<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>
    <%=title%>
  </title>
  <meta name="description" content="index page of social-media website">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

  <!-- bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <!-- bootstrap -->

  <!-- custom styles -->
  <link rel="stylesheet" type="text/css" href="css/index.css" />
  <!-- custom scripts -->
  <script src="js/index.js"></script>
</head>

<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#"><%=user%></a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/addWorkout">Add Workout</a>
          </li>
          <li>
            <a href="#" id="delete">Delete Workout</a>
          </li>
          <li>
            <a href="#" id="edit">Edit Workout</a>
          </li>
        </ul>   
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
          </li>
        </ul>    
      </div>
    </div>
  </nav>
  <div class="container table-responsive form">
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Start time</th>
          <th>End time</th>
          <th>Duration</th>
        </tr>
      </thead>
      <tbody>
        <% for(workout of progress) { %>
          <tr>
            <td><%=workout.date%></td>
            <td><%=workout.descr%></td>
            <td><%=workout.start%></td>
            <td><%=workout.end%></td>
            <td><%=workout.duration%></td>
            <input type="hidden" value="<%=workout.id%>"/>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
  <footer class="container-fluid text-center">
    <hr />
    <h2>
      Total: <%=ges%>
    </h2>
  </footer>
</body>

</html>